#!/bin/bash -x

#Scrips to see logins
fcolumn=1
scolumn=1
numkey=-n

help(){
echo -e " 
-h выводит help\n-f сортирует по первой колонке\n
"

}

case $1 in
-f) numkey=""
;;
-s) scolumn=3
;;
-u) fcolumn=3
;;
-h) help
 
exit
;;
*) cat /etc/passwd
exit
;;
esac

getent passwd | sort -t : -k  $fcolumn $numkey | cut -f $fcolumn,$scolumn -d :
