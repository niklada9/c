#!/bin/bash

#Scrips to see logins
field_name = 1
field_uid = 3
sort_field_name = 3

case $1 in
-t) sort -t: | cut -f 1 -d : /etc/passwd
;;
-x) sort -t: -k 1 /etc/passwd | cut -f 1 -d :
;;
-s) sort -t: -nk 3 /etc/passwd | cut -f 1,3 -d :
;;
sort -t: -nk $sort_field_name /etc/passwd | cut -f 1,3 -d :
;;
-h) echo "
# -h выводит help
# -t выводит первую колонку
# -x сортирует по имени и выводи первую колонку
# -s сортирует по UID
"
;;
*) cat /etc/passwd
;;
esac

