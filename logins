#!/bin/bash

#Scrips to see logins

case $1 in
-t) cut -f 1 -d : /etc/passwd
;;
-x) sort -t: -k 1 /etc/passwd | cut -f 1 -d :
;;
-s) sort -t: -nk 3 /etc/passwd | cut -f 1,3 -d :
;;
-h) echo "
# -h выводит help
# -t выводит первую колонку
# -x сортирует по имени и выводи первую колонку
# -s сортирует по UID
"
;;
*) cat /etc/passwd
;;
esac

